[settings]
# =============================================================================
# OpenAI Configuration
# =============================================================================
OPENAI_API_KEY = YOUR_OPENAI_API_KEY

# Model name (e.g., gpt-5.2, gpt-4o, gpt-4-turbo, o1-mini)
MODEL = gpt-4o

# =============================================================================
# Zulip Configuration
# =============================================================================
ZULIP_CONFIG = zuliprc
USER_ID = ZULIP_USER_ID_INT
BOT_ID = BOT_DEPLOYED_ID
BOT_NAME = YOUR_BOT_NAME

# Access control: restrict to specific streams (comma-separated)
# Only users subscribed to these streams can use the bot
# Leave empty to allow access from anywhere
ALLOWED_STREAMS = DSAA3071-2026-Spring, Teaching-DSAA3071-2026-Spring

# =============================================================================
# Course Materials
# =============================================================================
# Directory containing course materials (.typ files organized by week)
COURSE_DIR = DSAA3071TheoryOfComputation

# =============================================================================
# Stream Mode: RAG (Retrieval-Augmented Generation)
# =============================================================================
# Vector store ID for stream messages - upload course files first: make upload
# Stream messages use RAG to search relevant content per query
VECTOR_STORE_ID = vs_xxxxxxxxxxxx

# =============================================================================
# DM Mode: Weekly with Conversation Memory
# =============================================================================
# In DM, users must specify which week to study (e.g., "week 3")
# Then they can ask follow-up questions about that week's content

# File patterns to filter which files to load per week (comma-separated)
# Supports glob patterns: "*learning-sheet*", "*validation*"
FILE_PATTERNS = *learning-sheet*, *validation*

# Conversation memory: number of Q&A turns to keep (sliding window)
# Higher = more context but more tokens; Lower = cheaper but less memory
# Set to 0 to disable conversation memory entirely (stateless)
# Default: 5 turns (10 messages)
MAX_CONVERSATION_TURNS = 5

# =============================================================================
# Optional Settings
# =============================================================================
# Override auto-detected max output tokens
# MAXIMUM_CONTENT_LENGTH = 16384
