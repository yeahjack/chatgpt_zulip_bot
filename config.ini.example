[settings]
# OpenAI Configuration
OPENAI_API_KEY = YOUR_OPENAI_API_KEY
# Model name (e.g., gpt-5.2, gpt-4o, gpt-4-turbo, o1-mini)
# Context window and max output tokens are auto-detected based on model
MODEL = gpt-4o

# Zulip Configuration
ZULIP_CONFIG = zuliprc
USER_ID = ZULIP_USER_ID_INT
BOT_ID = BOT_DEPLOYED_ID
BOT_NAME = YOUR_BOT_NAME

# Course materials directory (relative or absolute path)
COURSE_DIR = DSAA3071TheoryOfComputation

# File patterns to include from course materials (comma-separated)
# Supports glob patterns and substring matching:
#   - Glob: "*learning-sheet*", "week*/*.typ", "*.typ"
#   - Substring: "learning-sheet" (matches if contained in filename)
# Leave empty to load all files
# Examples:
#   FILE_PATTERNS = learning-sheet, validation
#   FILE_PATTERNS = *learning-sheet*, *validation*
FILE_PATTERNS = *learning-sheet*, *validation*

# RAG (Retrieval-Augmented Generation) using OpenAI File Search
# Vector store ID - upload course files first using: make upload
# If not set, falls back to embedding all matching files in the system prompt
# VECTOR_STORE_ID = vs_xxxxxxxxxxxx

# Access Control: Restrict bot to specific streams and their members
# Comma-separated list of stream names
# Only users subscribed to these streams can use the bot (in stream or via DM)
# Leave empty or remove to allow access from anywhere
ALLOWED_STREAMS = DSAA3071-2026-Spring, Teaching-DSAA3071-2026-Spring

# Optional: Override auto-detected max output tokens
# MAXIMUM_CONTENT_LENGTH = 16384
